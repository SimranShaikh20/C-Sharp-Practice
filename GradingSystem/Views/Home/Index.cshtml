@{
    ViewData["Title"] = "Home - Assignment Submission System";
}
@model GradingSystem.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0; /* Remove default body margin */
            padding: 0; /* Remove default body padding */
        }

        .hero-section {
            background-color: white; /* Change hero section background to white */
            color: #333; /* Change text color for better contrast */
            padding: 50px 0; /* Adjust padding */
            text-align: center;
        }

        .login-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Limit the width of the login card */
            margin: 20px auto; /* Center the login card */
        }

        .btn-custom {
            background-color: #00509e;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .btn-custom:hover {
                background-color: #003366;
            }

        /* Ensure the image does not exceed the viewport width */
        .hero-section img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto; /* Center the image */
        }
    </style>
</head>
<body>
    <!-- Hero Section with Image -->
 

    <!-- Login Section -->
    <div class="container">
        <div class="login-card">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="prnNumber">PRN Number</label>
                    <input type="text" class="form-control" id="prnNumber" name="prnNumber" placeholder="Enter PRN Number" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                </div>
                <button type="submit" class="btn btn-custom btn-block">Login</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>